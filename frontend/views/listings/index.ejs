      <% for (let data of listingData) { %>
        <a href="/listings/<%= data._id %>" , class="listing-link">
          <div class="card col">
            <img src="<%= data.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">

            <div class="card-img-overlay">

            </div>

            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= data.title %>
                </b><br>
                â‚¹<%= data.price ? data.price.toLocaleString("en-IN") : "N/A" %>
              </p>
            </div>
          </div>
        </a>


        <% } %>
    </div>
</div>